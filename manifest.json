{
	"manifest_version": 2,
	"name": "Likeastore",
	"description": "Social bookmarks for geeks.",
	"version": "1.0.0",

	"permissions": [
		"tabs",
		"activeTab",
		"http://*/*", "https://*/*"
	],

	"content_scripts": [{
		"run_at": "document_end",
		"css": ["css/content.css"],
		"js": ["libs/jquery-2.1.1.min.js", "libs/jquery-wait.until.js", "js/content.js"],
		"matches": [ "http://*/*", "https://*/*" ]
	}],

	"icons" : {
		"16": "img/logo_16px.png",
		"48" : "img/logo_48px.png",
		"128" : "img/logo_128px.png"
	}
}